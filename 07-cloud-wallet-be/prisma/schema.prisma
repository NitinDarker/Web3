generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       String   @id @default(uuid())
  username String   @unique
  password String
  wallets  Wallet[]
}

model Wallet {
  id           String @id @default(uuid())
  publicKey    String @unique
  encryptedKey String
  iv           String
  authTag      String
  userId       String 
  user         User   @relation(fields: [userId], references: [id])
}
